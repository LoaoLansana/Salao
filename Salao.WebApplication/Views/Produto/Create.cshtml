<div class="row">
    <div class="col">
        <div class="card bg-bluedark h-100">
            <div class="card-header" style="padding: 1.5rem;">
                <h5 class="mb-0" style="font-size: 1rem;">Cadastrar Produto</h5>
            </div>
            <div class="card-body">
                <form  id="cadastro_produto_form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="control-label">Nome do Produto</label>
                            <input type="text" class="form-control" required="required" />
                            
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Categoria</label>
                            <input type="text" class="form-control" required="required" />
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label class="control-label">Preço</label>
                            <input type="text" class="form-control" type="number" step="0.01" required="required" />
                            
                        </div>
                        <div class="col-md-6">
                            <label class="control-label">Descrição</label>
                            <textarea type="text" class="form-control" required="required"></textarea>
                           
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="control-label">Outro Campo</label>
                        <input type="text" class="form-control" />
                        <!-- Adicione outros campos conforme necessário -->
                    </div>
                    <div class="col-md-6">
                        <!-- Adicione outros campos conforme necessário -->
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success" form="cadastro_produto_form">Salvar</button>
                        <a class="btn btn-primary" asp-action="Index">Voltar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
