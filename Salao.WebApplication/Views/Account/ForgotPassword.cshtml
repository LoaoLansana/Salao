@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col">
        <div class="card bg-bluedark  h-100">
            <div class="card-header" style="padding: 1.5rem;">
                <h5 class="mb-0" style="font-size: 1rem;">Esqueci minha senha</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Account" asp-action="ForgotPassword" method="post">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="email" class="control-label" required="required">E-mail:</label>
                            <input type="email" id="email" name="email" required class="form-control" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary">Enviar</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>